<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="ivansantos.marvelcharacters.ui.MarvelCharactersViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_characters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="@{viewmodel.existCharacters ? View.VISIBLE : View.INVISIBLE }"
            app:layoutManager="LinearLayoutManager"
            tools:context="ivansantos.marvelcharacters.ui.MainActivity"
            tools:listitem="@layout/marvel_character_master_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewmodel.existCharacters ? View.INVISIBLE : View.VISIBLE }">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading characters" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>